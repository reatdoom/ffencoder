#!/bin/bash

source ffconfig

#################### 防止程序重复执行 #############################

app=${0##*/}

SAVEIFS=$IFS
IFS=$(echo -ne "\n\b")

if [ -f /var/run/$app.pid ]
then
    echo "The Process is Running! (Exit)"
    exit
else
    touch /var/run/$app.pid
fi

################### 程序函数 ######################################

function ExitProcess {
    exec 6>&-
    rm /var/run/$app.pid
    rm $tmp_fifofile
    exit 0
}

function wmv {
    ffmpeg -y -i "$1" -vcodec wmv2 -s 720x576 -r 25 -vb 2000k -acodec wmav2 -ac 2 -ar 44100 -ab 128k "$2"
}

function wmvhd {
    ffmpeg -y -i "$1" -vcodec wmv2 -s 1920x1080 -r 25 -vb 8000k -acodec wmav2 -ac 2 -ar 44100 -ab 256k "$2"
}

function inspect {
    lsof $1
    status=$(echo $?)
}

# 核心转码函数
function encoder {    
    
    file=$1
    filename=${file%.*}
    filetype=${file##*.}

    # 开始转码
    wmv "$ETMP/$file" "$ETMP/$filename.tmp.wmv"

    if [ $? -eq 0 ]
    then

        # 文件迁移
        mv "$ETMP/$filename.tmp.wmv" "$DSTDIR/$filename.wmv"

        # 删除源视频
        rm "$ETMP/$file"

        echo "$f finished"
        ./log "name=$fn&status=2&action=update"
    
    else
        echo "$f error"
        ./log "name=$fn&status=5&action=update"
    fi
    
}

################### 创建FIFO文件 ##################################

tmp_fifofile="/dev/shm/$$.fifo"
mkfifo $tmp_fifofile
exec 6<>$tmp_fifofile

################### 信号处理 ##################################

trap ExitProcess SIGINT SIGTERM SIGQUIT

################### 程序主体 ######################################

thread=6

for((i=0;i<$thread;i++));
do
    echo
done>&6

while true
do
    sleep 5
    read -u6

    f=$(ls -t $SRCDIR/|tail -n1)

    if [ -z $f ]
    then
        echo "NO FILES !!!!"
        echo >&6
        continue
    fi

    # 检查文件是否正在上传
    inspect "$SRCDIR/$f"
    if [ $status -eq 0 ]
    then
        echo "$f is uploading..."
        echo >&6
	    continue
    fi

    mv "$SRCDIR/$f" "$ETMP/$f"

    fn=${f%.*}
    ft=${f##*.}

    ./log "name=$fn&type=$ft&action=insert"

    {
        encoder $f
        echo >&6
    }&
done

wait

ExitProcess
